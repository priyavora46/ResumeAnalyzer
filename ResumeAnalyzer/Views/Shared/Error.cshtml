@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-exclamation-sign"></span> Error Occurred
                </h3>
            </div>
            <div class="panel-body">
                <h2>An error occurred while processing your request.</h2>
                <p class="text-muted">We apologize for the inconvenience. Please try again or contact support if the problem persists.</p>

                @if (Model != null)
                {
                    <div class="alert alert-warning" style="margin-top: 20px;">
                        <h4>Error Details:</h4>
                        <p><strong>Controller:</strong> @Model.ControllerName</p>
                        <p><strong>Action:</strong> @Model.ActionName</p>
                        @if (Model.Exception != null)
                        {
                            <p><strong>Message:</strong> @Model.Exception.Message</p>
                        }
                    </div>
                }

                <div style="margin-top: 30px;">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <span class="glyphicon glyphicon-home"></span> Go to Home
                    </a>
                    <a href="javascript:history.back()" class="btn btn-default">
                        <span class="glyphicon glyphicon-arrow-left"></span> Go Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>