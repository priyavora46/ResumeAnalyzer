@model ResumeAnalyzer.Models.ContactMessage

@{
    ViewBag.Title = "Message Details";
    var secretKey = Request.QueryString["key"];
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2><span class="glyphicon glyphicon-envelope"></span> Message Details</h2>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-user"></span> From: @Model.Name
                    </h3>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <tr>
                            <th width="150">Message ID:</th>
                            <td>#@Model.Id</td>
                        </tr>
                        <tr>
                            <th>Date & Time:</th>
                            <td>@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")</td>
                        </tr>
                        <tr>
                            <th>Name:</th>
                            <td><strong>@Model.Name</strong></td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>
                                <a href="mailto:@Model.Email" class="btn btn-success btn-sm">
                                    <span class="glyphicon glyphicon-envelope"></span> @Model.Email
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Subject:</th>
                            <td><span class="label label-info">@Model.Subject</span></td>
                        </tr>
                    </table>

                    <div class="well">
                        <h4>Message:</h4>
                        <p style="white-space: pre-wrap;">@Model.Message</p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.ActionLink("← Back to List", "ContactMessages", new { key = secretKey }, new { @class = "btn btn-primary" })

                <form method="post" action="@Url.Action("DeleteMessage", new { id = Model.Id, key = secretKey })" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this message?');">
                        <span class="glyphicon glyphicon-trash"></span> Delete Message
                    </button>
                </form>
            </div>
        </div>

        <div class="col-md-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Quick Actions</h3>
                </div>
                <div class="panel-body">
                    <a href="mailto:@Model.Email?subject=Re: @Model.Subject" class="btn btn-success btn-block">
                        <span class="glyphicon glyphicon-send"></span> Reply via Email
                    </a>
                    <hr />
                    <p><small><strong>Email Client:</strong> Opens your default email app</small></p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .well {
        background-color: #f9f9f9;
        margin-top: 20px;
    }

    .label {
        font-size: 13px;
        padding: 5px 10px;
    }
</style>

