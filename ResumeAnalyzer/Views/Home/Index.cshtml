@{
    ViewBag.Title = "Home";
}
<div class="jumbotron hero-section">
    <h1>AI-Powered Resume Analyzer</h1>
    <p class="lead">Get instant, intelligent feedback on your resume using Google's Gemini AI</p>
    <p>
        <a href="@Url.Action("Upload", "Resume")" class="btn btn-primary btn-lg">
            <span class="glyphicon glyphicon-upload"></span> Analyze Your Resume
        </a>
    </p>
</div>

<div class="row features-section">
    <div class="col-md-4">
        <div class="panel panel-primary feature-card">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-search"></span> Comprehensive Analysis
                </h3>
            </div>
            <div class="panel-body">
                <p>Get detailed insights on your resume including skills assessment, ATS compatibility, and keyword optimization.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-success feature-card">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-star"></span> AI-Powered Insights
                </h3>
            </div>
            <div class="panel-body">
                <p>Leverage Google's Gemini AI to receive intelligent recommendations and personalized suggestions.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-info feature-card">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-dashboard"></span> Instant Results
                </h3>
            </div>
            <div class="panel-body">
                <p>Upload your resume and get a comprehensive analysis report within seconds.</p>
            </div>
        </div>
    </div>
</div>

<div class="row how-it-works-section">
    <div class="col-md-12">
        <h2 class="section-title">How It Works</h2>
        <div class="row">
            <div class="col-md-3 text-center step-item">
                <span class="glyphicon glyphicon-upload step-icon"></span>
                <h4>1. Upload</h4>
                <p>Upload your resume in PDF, DOCX, or TXT format</p>
            </div>
            <div class="col-md-3 text-center step-item">
                <span class="glyphicon glyphicon-cog step-icon"></span>
                <h4>2. Analyze</h4>
                <p>Our AI processes your resume using advanced algorithms</p>
            </div>
            <div class="col-md-3 text-center step-item">
                <span class="glyphicon glyphicon-list-alt step-icon"></span>
                <h4>3. Review</h4>
                <p>Get detailed scores, insights, and recommendations</p>
            </div>
            <div class="col-md-3 text-center step-item">
                <span class="glyphicon glyphicon-ok-circle step-icon"></span>
                <h4>4. Improve</h4>
                <p>Apply suggestions to create a stronger resume</p>
            </div>
        </div>
    </div>
</div>

<div class="row supported-formats">
    <div class="col-md-12">
        <div class="alert alert-info format-alert">
            <h4><span class="glyphicon glyphicon-info-sign"></span> Supported Formats</h4>
            <p>We support PDF (.pdf), Microsoft Word (.docx), and plain text (.txt) files up to 10MB in size.</p>
        </div>
    </div>
</div>