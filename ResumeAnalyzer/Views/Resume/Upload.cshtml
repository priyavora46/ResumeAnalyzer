@model ResumeAnalyzer.Models.ResumeViewModel

@{
    ViewBag.Title = "Upload Resume";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-upload"></span> Upload Your Resume for Analysis
                </h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Upload", "Resume", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.ResumeFile, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <input type="file" name="ResumeFile" id="ResumeFile" class="form-control" accept=".pdf,.docx,.txt" required />
                                @Html.ValidationMessageFor(model => model.ResumeFile, "", new { @class = "text-danger" })
                                <p class="help-block">Supported formats: PDF, DOCX, TXT (Max 10MB)</p>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TargetPosition, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.TargetPosition, new { @class = "form-control", placeholder = "e.g., Software Engineer, Data Analyst" })
                                @Html.ValidationMessageFor(model => model.TargetPosition, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.JobDescription, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.JobDescription, new { @class = "form-control", rows = 6, placeholder = "Paste the job description here to match your resume against specific requirements..." })
                                @Html.ValidationMessageFor(model => model.JobDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-primary btn-lg" id="analyzeBtn">
                                    <span class="glyphicon glyphicon-search"></span> Analyze Resume
                                </button>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-default btn-lg">
                                    <span class="glyphicon glyphicon-remove"></span> Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <div id="uploadProgress" style="display:none; margin-top: 20px;">
                    <div class="alert alert-info">
                        <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span>
                        <strong>Analyzing your resume...</strong> This may take a few moments.
                    </div>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="alert alert-info">
            <h4><span class="glyphicon glyphicon-info-sign"></span> Tips for Best Results</h4>
            <ul>
                <li>Ensure your resume is well-formatted and easy to read</li>
                <li>Include relevant keywords for your target position</li>
                <li>If you have a specific job description, paste it in for better keyword matching</li>
                <li>Make sure the file contains readable text (scanned images may not work well)</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('form').on('submit', function () {
                var fileInput = $('#ResumeFile')[0];
                if (fileInput.files.length === 0) {
                    alert('Please select a file to upload');
                    return false;
                }

                var fileSize = fileInput.files[0].size;
                var maxSize = 10 * 1024 * 1024; // 10MB

                if (fileSize > maxSize) {
                    alert('File size exceeds 10MB limit');
                    return false;
                }

                $('#analyzeBtn').prop('disabled', true);
                $('#uploadProgress').show();
            });
        });
    </script>
    
}